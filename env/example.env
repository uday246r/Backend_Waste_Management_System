# Copy this file to env/.env and replace the placeholder values
# before running the server locally or deploying.

NODE_ENV=development
PORT=4000
CLIENT_URL=http://localhost:5173
SOCKET_ORIGIN=http://localhost:5173

# MongoDB connection string
MONGO_URI=replace-with-your-mongodb-uri

# JWT secret for signing auth tokens
JWT_SECRET=replace-with-a-long-random-string

# Razorpay credentials (required for payment features)
RAZORPAY_KEY_ID=replace-with-razorpay-key-id
RAZORPAY_KEY_SECRET=replace-with-razorpay-key-secret

